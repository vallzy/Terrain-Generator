<Window x:Class="MapTerrainGeneratorWPF.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="315" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Default Output Folder:" FontWeight="Bold"/>
            <DockPanel Margin="0,0,0,15">
                <Button Content="Browse" DockPanel.Dock="Right" Width="60" Margin="5,0,0,0" Click="BtnBrowseOutput_Click"/>
                <TextBox x:Name="txtOutputFolder" IsReadOnly="True" Padding="3"/>
            </DockPanel>

            <Label Content="Default Target Mode:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbDefTarget" Margin="0,0,0,15" Padding="3">
                <ComboBoxItem Content="Use .map Hint Brush"/>
                <ComboBoxItem Content="Manual Size"/>
            </ComboBox>

            <Label Content="Default Noise Type:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbDefNoise" Margin="0,0,0,20" Padding="3">
                <ComboBoxItem Content="Perlin Noise"/>
                <ComboBoxItem Content="Simplex Noise"/>
                <ComboBoxItem Content="Regular (Random)"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save Settings" Width="100" Height="30" Background="#FF90EE90" Click="BtnSave_Click"/>
                <Button Content="Cancel" Width="80" Height="30" Margin="10,0,0,0" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>