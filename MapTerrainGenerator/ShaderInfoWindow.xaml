<Window x:Class="MapTerrainGeneratorWPF.ShaderInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shader Information" Height="450" Width="550" 
        WindowStartupLocation="CenterOwner" Background="#FF252526">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblShaderName" Grid.Row="0" Text="Shader: unknown" Foreground="White" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#FF3F3F46" BorderThickness="1" Background="#FF1E1E1E">
            <TextBox x:Name="txtShaderCode" 
                     IsReadOnly="True" 
                     Background="Transparent" 
                     Foreground="#FFD4D4D4" 
                     FontFamily="Consolas" 
                     FontSize="13"
                     BorderThickness="0"
                     Margin="5"
                     AcceptsReturn="True" 
                     TextWrapping="NoWrap" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Copy to Clipboard" Width="120" Height="30" Margin="0,0,10,0" Background="#FF3399FF" Foreground="White" BorderThickness="0" Click="BtnCopy_Click"/>
            <Button Content="Close" Width="80" Height="30" Background="#FF555555" Foreground="White" BorderThickness="0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
  